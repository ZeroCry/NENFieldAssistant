<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp" >

    <TextView
        android:id="@+id/txt_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/StoreName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_storeabbr"
        android:layout_below="@+id/txt_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/storeabbr"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_storeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/storeid"
        android:textColor="@android:color/darker_gray"
        android:layout_alignTop="@+id/txt_storeabbr"
        android:layout_toEndOf="@+id/txt_storeabbr" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_below="@+id/txt_storeabbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:linksClickable="false"
        android:text="@string/address"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_city"
        android:layout_below="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:linksClickable="false"
        android:text="@string/city"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_phone_number"
        android:layout_below="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autoLink="phone"
        android:linksClickable="false"
        android:text="@string/phonenumber"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>